<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical">

        <com.yuan.hmcardview.HMShadowCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:hm_card_color="#FF9800"
            app:hm_card_corner="20dp"
            app:hm_dx="10dp"
            app:hm_dy="10dp"
            app:hm_shadowColor="#50000000"
            app:hm_shadowEffect="10dp"
            app:hm_shadow_inset="3dp">

            <TextView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="HMShadowCardView"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />
        </com.yuan.hmcardview.HMShadowCardView>

        <com.yuan.hmcardview.HMShadowCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:hm_card_color="#FF9800"
            app:hm_card_corner="30dp"
            app:hm_card_drawable="@drawable/card_bg"
            app:hm_dx="10dp"
            app:hm_dy="10dp"
            app:hm_shadowColor="#50000000"
            app:hm_shadowEffect="10dp"
            app:hm_shadow_inset="3dp">

            <TextView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="HMShadowCardView"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />
        </com.yuan.hmcardview.HMShadowCardView>


        <com.yuan.hmcardview.HMShadowCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:hm_card_color="#FF9800"
            app:hm_card_corner="30dp"
            app:hm_dx="3dp"
            app:hm_dy="5dp"
            app:hm_shadowColor="#80000000"
            app:hm_shadowEffect="10dp"
            app:hm_shadow_inset="3dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Button"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />
        </com.yuan.hmcardview.HMShadowCardView>
    </LinearLayout>

</FrameLayout>